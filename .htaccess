# cPanel / LiteSpeed Web Server Configuration
# Fixes 403 Forbidden errors and enables proper PHP handling

# Enable UTF-8
AddCharset UTF-8 .php .html .css .js

# Enable PHP Handler
AddType application/x-httpd-php .php

# Allow directory listing (optional - comment out if you don't want it)
Options +Indexes +FollowSymLinks +MultiViews

# Set proper permissions
<FilesMatch "\.(php|phtml|php3|php4|php5|php6|php7|php8|phps|pht|phar)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Allow all file access
<FilesMatch "\.(js|css|gif|jpg|jpeg|png|svg|ico|woff|woff2|ttf|eot|json|xml|txt|pdf|zip)$">
    Order Allow,Deny
    Allow from all
    Header set Cache-Control "public, max-age=31536000"
</FilesMatch>

# Allow POST requests
<LimitExcept GET POST HEAD OPTIONS>
    Order Allow,Deny
    Allow from all
</LimitExcept>

# Disable directory indexing for API and includes
<Directory "api">
    Options -Indexes
</Directory>

<Directory "includes">
    Options -Indexes
</Directory>

<Directory "templates">
    Options -Indexes
</Directory>

# Session configuration
php_value session.auto_start 0
php_value session.use_trans_sid 0
php_value session.cookie_httponly 1
php_value session.cookie_path /
php_value session.save_path /tmp

# Error handling
php_flag display_errors Off
php_value error_reporting 32767

# File upload limits
php_value upload_max_filesize 100M
php_value post_max_size 100M
php_value memory_limit 256M
php_value max_execution_time 300

# CORS Headers
Header set Access-Control-Allow-Origin "*"
Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
Header set Access-Control-Max-Age "3600"

# Security headers
Header set X-Content-Type-Options "nosniff"
Header set X-Frame-Options "SAMEORIGIN"
Header set X-XSS-Protection "1; mode=block"

# Rewrite engine (for clean URLs if needed)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Prevent direct access to sensitive files
    RewriteRule "^(includes/|templates/|\.ht)" - [F]
    
    # Redirect index
    RewriteRule ^index\.php$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . index.php [L]
</IfModule>

# Prevent access to hidden files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Allow PHP files in API directory
<Directory api>
    <FilesMatch "\.php$">
        Allow from all
    </FilesMatch>
</Directory>
